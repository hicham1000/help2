<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link href="{{ asset('bundles/fosckeditor/plugins/codesnippet/lib/highlight/styles/monokai_sublime.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
    {% block header %}
    <header>
        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}">
                HELP
                </a>
                <form class="d-flex flex-row w-50">
                    {{ render(controller('App\\Controller\\SearchController::index')) }}            
                </form>
                <div class="block-btn d-flex flex-row">

                    {% if is_granted('ROLE_ADMIN') %}
                        <div class=" dropdown">
                            <button class="btn btn-outline-light  me-2 dropdown-toggle" type="button"
                                id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16">
                                    <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z"/>
                                    <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                                </svg>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li class="dropdown-item"><a href="{{ path('univers_index') }}" class="text-decoration-none link-dark">Univers</li>
                                <li class="dropdown-item"><a href="{{ path('context_index') }}" class="text-decoration-none link-dark">context</li>
                                <li class="dropdown-item"><a href="{{ path('appuser_index') }}" class="text-decoration-none link-dark">Users</li>
                            </ul>
                        </div>
                    {% endif %}

                    <a href="{{ path('users/users') }}" class="text-decoration-none">
                    <button type="button" class="btn btn-sm" name="monCompte">
                        <svg width="25" height="25" fill="white" class="bi bi-person-square" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                            <path
                                d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12z" />
                        </svg>
                    </button>
                    <a href="{{ path('post_add') }}" class="text-decoration-none">
                        <button type="button" class="btn btn-sm" name="add" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <svg width="25" height="25" fill="white" class="bi bi-person-square" viewBox="0 0 16 16">
                                <path
                                    d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path
                                    d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                            </svg>
                        </button>
                    </a>
                    <a href="{{ path('app_logout') }}" class="text-decoration-none">
                        <button type="button" class="btn btn-sm" name="add" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <svg width="25" height="25" fill="white" class="bi bi-person-square" viewBox="0 0 16 16">
                                <path d="M7.5 1v7h1V1h-1z"/>
                                <path d="M3 8.812a4.999 4.999 0 0 1 2.578-4.375l-.485-.874A6 6 0 1 0 11 3.616l-.501.865A5 5 0 1 1 3 8.812z"/>
                            </svg>
                        </button>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    {% endblock %}

    {% block body %}
    {% endblock %}
    <nav class="navbar fixed-bottom navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"></a>
            <span class="p-2"> Copyright Â©2021 </span><span class="p-2"> Help! </span>
        </div>
    </nav>
</body>

{% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <script src="{{ asset('bundles/fosckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js') }}"></script>
        <script>hljs.initHighlightingOnLoad();</script>
{% endblock %}

</html>